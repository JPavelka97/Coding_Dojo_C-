@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>
<div class="text-center">
    <h1 class="display-4">Welcome to Chefs and Dishes</h1>
    <div class="d-flex gap-3 justify-content-center">
        <a href="/">Chefs</a>
        <p> | </p>
        <p>Dishes</p>
        <p> | </p>
        <a href="/chefs/new">Add a Chef</a>
        <p> | </p>
        <a href="/dishes/new">Add a Dish</a>
    </div>
    <h4>Check out some of our Dishes!</h4>
    <hr>
    @foreach(Dish d in Model)
    {
        <p>Dish Name: @d.Name  |  Chef Name: @d.Chef.FirstName  |  Tastiness: @d.Tastiness  |  Calories: @d.Calories</p>
    }
</div>